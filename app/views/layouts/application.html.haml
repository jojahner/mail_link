!!!
%html
  %head
    %title MailLinks
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{data: { toggle: 'collapse', target: '.nav-collapse' }, class: 'btn btn-navbar'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'MailLink', root_path, class: 'brand'
          .nav-collapse
            %ul.nav.pull-right
              - if current_user
                %li.dropdown
                  = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                    = current_user.email
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'logout', logout_path
              - else
                %li
                  = link_to 'login', login_path
                %li
                  = link_to 'register', '#'
    .container
      = yield
