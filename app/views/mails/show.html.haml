- model_class = Mail
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:_type) + ':'
  %br
  = @mail._type
%p
  %strong= model_class.human_attribute_name(:_id) + ':'
  %br
  = @mail._id
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @mail.content
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @mail.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), mails_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_mail_path(@mail), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), mail_path(@mail), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
