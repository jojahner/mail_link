- model_class = Mail
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:_type)
      %th= model_class.human_attribute_name(:_id)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @mails.each do |mail|
      %tr
        %td= link_to mail.id, mail_path(mail)
        %td= mail._type
        %td= mail._id
        %td= mail.content
        %td= mail.user_id
        %td=l mail.created_at
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), mail_path(mail), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

