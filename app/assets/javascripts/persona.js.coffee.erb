jQuery ->
  $('#persona-login-button').click (event)->
    alert event
    event.preventDefault()
    navigator.id.request()

  navigator.id.watch {
    loggedInEmail: window.current_user
    onlogin: (assertion)->
      $.ajax
        type: 'post'
        url: $('#persona-login-button').data('create-url')
        data:
          assertion: assertion
      .done (data)->
         alert data
      .fail (data)->
        alert data
    onlogout: ->
      alert "logout"
  }

