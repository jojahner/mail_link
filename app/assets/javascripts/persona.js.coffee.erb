jQuery ->
  $('#persona-login-button').click (event)->
    event.preventDefault()
    navigator.id.request()

  navigator.id.watch {
    loggedInUser: window.current_user
    onlogin: (assertion)->
      $.ajax
        type: 'post'
        url: $('#persona-login-button').data('create-url')
        dataType: "json"
        data:
          assertion: assertion
      .done (data)->
        console.log data
        window.location = data.redirect_to
    onlogout: ->
      alert "logout"
  }

